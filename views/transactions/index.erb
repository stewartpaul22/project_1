<header>
  <h2 class="spent">You've spent <span class="bold">£<%= '%.2f' % @total_spent %></span></h2>
  <% if @remaining_funds < (@monthly_budget / 2) %>
    <h2 class="remaining_amber">Budget remaining <span class="bold">£<%= '%.2f' % @remaining_funds %></span></h2>
  <% elsif @remaining_funds < 0 %>
    <h2 class="remaining_red">Budget remaining <span class="bold">£<%= '%.2f' % @remaining_funds %></span></h2>
  <% else %>
    <h2 class="remaining">Budget remaining <span class="bold">£<%= '%.2f' % @remaining_funds %></span></h2>
  <% end %>
</header>

<div class="main">

  <section class="category">
    <h3>All Transactions</h3>
  </section>

  <table>
    <tr>
      <th>Amount</th>
      <th>Merchant</th>
      <th>Date</th>
      <th>Category</th>
    </tr>
    <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.transaction_date %></td>
      <td><%= transaction.merchant_name %></td>
      <td>£<%= '%.2f' % transaction.amount %></td>
      <td><%= transaction.tag %></td>
    </tr>
    <% end %>
  </table>
</div>
